{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=Marketplace;ConnectRetryCount=0;"
  },
  "JwtSettings": {
    "Key": "your_secret_key_here",
    "Issuer": "MarketplaceIssuer",
    "Audience": "MarketplaceAudience",
    "ExpirationMinutes": 60
  },
  "EmailSettings": {
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 587,
    "Username": ""
  }
}
